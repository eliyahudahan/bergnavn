<!-- backend/templates/maritime_split/dashboard_base.html -->
<!-- FIXED VERSION: Shows consistent route counts without duplication -->
{% extends "base.html" %}

{% block title %}Maritime Dashboard | BergNavn{% endblock %}

{% block head %}
<!-- Map style -->
<link href="{{ url_for('static', filename='css/split/map.css') }}" rel="stylesheet">
<!-- Dashboard CSS -->
<link href="{{ url_for('static', filename='css/dashboard.css') }}" rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<!-- Leaflet MarkerCluster -->
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css">
<link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css">

<style>
/* Data-driven badge */
.data-driven-badge {
    background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
    color: white;
    border: none;
    font-weight: bold;
}

/* Warning badge for debugging */
.warning-badge {
    background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
    color: #212529;
    border: none;
    font-weight: bold;
}

/* Custom styles for enhanced dashboard */
.route-table-container {
    max-height: 600px;
    overflow-y: auto;
}
.city-badge {
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.85rem;
    margin: 3px;
    padding: 4px 10px;
    border-radius: 15px;
    display: inline-block;
}
.city-badge:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}
.status-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 10px;
}
.stats-card {
    transition: transform 0.3s ease;
    border-radius: 10px;
    padding: 20px;
    background: white;
    box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    height: 100%;
}
.stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.12);
}

/* Spinner animation */
.spin {
    animation: spin 1s linear infinite;
}
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Active port badge */
.city-badge.active {
    transform: scale(1.05);
    box-shadow: 0 0 15px rgba(0,123,255,0.4);
    border: 2px solid #007bff !important;
}

/* Data-driven highlight */
.data-note {
    border-left: 4px solid #17a2b8;
    padding-left: 12px;
    font-size: 0.9rem;
    margin-top: 8px;
}

/* Data warning highlight */
.data-warning {
    border-left: 4px solid #ffc107;
    padding-left: 12px;
    font-size: 0.9rem;
    margin-top: 8px;
}

/* Dashboard controls */
.control-btn {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    padding: 8px 15px;
    margin: 0 3px;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
}
.control-btn.active {
    background: #007bff;
    color: white;
    border-color: #007bff;
}
.control-btn:hover {
    background: #e9ecef;
}
.control-btn.active:hover {
    background: #0056b3;
}

.status-indicator {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 8px;
}
.status-live {
    background-color: #28a745;
    animation: pulse 2s infinite;
}
@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.6; }
    100% { opacity: 1; }
}

/* Debug panel */
.debug-panel {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 15px;
    margin-top: 10px;
    font-family: monospace;
    font-size: 0.85rem;
}
.debug-item {
    margin-bottom: 5px;
    padding: 3px 8px;
    border-radius: 4px;
    background: white;
}

/* Responsive design */
@media (max-width: 768px) {
    .stats-card {
        margin-bottom: 15px;
    }
    .city-badge {
        font-size: 0.8rem;
        padding: 3px 8px;
        margin: 2px;
    }
}
</style>
{% endblock %}

{% block content %}
<!-- Dashboard Header -->
<div class="dashboard-header text-center py-4">
    <h1 class="text-gradient mb-2">ðŸŒŠ Maritime Dashboard</h1>
    <p class="lead mb-3">Live AIS â€¢ MET Weather â€¢ RTZ Routes</p>
    
    <!-- Get accurate route counts -->
    {% set routes_from_db = routes if routes and routes is iterable else [] %}
    {% set total_db_routes = routes_from_db|length %}
    
    <!-- Calculate actual unique routes (remove duplicates) -->
    {% set unique_routes = [] %}
    {% set seen_route_names = {} %}
    {% if routes_from_db %}
        {% for route in routes_from_db %}
            {% set route_name = route.route_name or route.name or ('Route ' ~ loop.index) %}
            {% if route_name not in seen_route_names %}
                {% set _ = seen_route_names.update({route_name: true}) %}
                {% set _ = unique_routes.append(route) %}
            {% endif %}
        {% endfor %}
    {% endif %}
    
    {% set actual_unique_count = unique_routes|length %}
    
    <!-- Dynamic Count Badge - Shows actual data -->
    <div class="mb-3">
        <!-- Show the CORRECT count from unique routes -->
        <span class="badge data-driven-badge me-2" id="data-truth-badge" 
              title="Actual unique RTZ routes (duplicates removed)">
            <i class="fas fa-database me-1"></i>
            <span id="route-count-badge">{{ actual_unique_count }}</span> Unique RTZ Routes
            <span class="badge bg-light text-dark ms-1">âœ“ No Duplicates</span>
        </span>
        <span class="badge bg-info me-2">
            <i class="fas fa-ship me-1"></i>
            Real-time AIS
        </span>
        <span class="badge bg-warning">
            <i class="fas fa-wind me-1"></i>
            Live Weather
        </span>
    </div>
    
    <!-- Data Information Notice -->
    <div class="alert alert-info mb-3 py-2" id="data-info-alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-database me-3"></i>
            <div>
                <strong>Data Consistency Check</strong>
                <p class="mb-0 small">
                    Showing <strong>{{ actual_unique_count }}</strong> unique RTZ routes 
                    (filtered from <strong>{{ total_db_routes }}</strong> total entries).
                    Ports: <strong>{{ ports_list|length if ports_list else 0 }}</strong>
                    <button class="btn btn-sm btn-outline-info ms-2" id="show-data-source">
                        <i class="fas fa-info-circle"></i> Data Source
                    </button>
                </p>
            </div>
        </div>
    </div>
    
    <!-- Data Quality Warning (if duplicates detected) -->
    {% if total_db_routes > actual_unique_count %}
    <div class="alert alert-warning mb-3 py-2" id="data-quality-alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-3"></i>
            <div>
                <strong>Data Quality Notice</strong>
                <p class="mb-0 small">
                    Found <strong>{{ total_db_routes - actual_unique_count }}</strong> duplicate route entries. 
                    Showing unique routes only. 
                    <button class="btn btn-sm btn-outline-warning ms-2" id="fix-duplicates-btn">
                        <i class="fas fa-broom me-1"></i> Clean Data
                    </button>
                    <button class="btn btn-sm btn-outline-secondary ms-1" id="show-duplicates-btn">
                        <i class="fas fa-eye me-1"></i> Show Duplicates
                    </button>
                </p>
            </div>
        </div>
    </div>
    {% endif %}
    
    <!-- Actual empirical verification -->
    {% if empirical_verification and empirical_verification.verification_hash %}
    <div class="alert alert-success mb-3 py-2">
        <div class="d-flex align-items-center">
            <i class="fas fa-check-circle me-3"></i>
            <div>
                <strong>Empirical Verification Complete</strong>
                <p class="mb-0 small">
                    Data verified at: {{ empirical_verification.timestamp|default('Unknown') }}
                    <button class="btn btn-sm btn-outline-success ms-2" id="refresh-data">
                        <i class="fas fa-redo"></i> Refresh Data
                    </button>
                </p>
            </div>
        </div>
    </div>
    {% endif %}
    
    <div class="ports-badges-container mb-3">
        {% if ports_list and ports_list|length > 0 %}
            {% for port in ports_list %}
            <span class="city-badge" 
                  data-port="{{ port|lower }}">
                {{ port }}
            </span>
            {% endfor %}
        {% else %}
            <span class="text-muted">No ports available</span>
        {% endif %}
        <!-- Reset button -->
        <span class="city-badge" id="reset-filters" style="background-color: #6c757d; color: white;" data-port="reset">
            <i class="fas fa-times me-1"></i> Reset
        </span>
    </div>
</div>

<!-- Main Dashboard -->
<div class="container-fluid mt-4">
    
    <!-- Control Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-controls">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="status-indicator status-live"></span>
                        <span class="fw-semibold text-success" id="data-status">Live</span>
                        <span class="ms-3" id="local-time">--:--</span>
                    </div>
                    <div class="btn-group btn-group-sm">
                        <button class="control-btn" id="refresh-btn" title="Refresh Dashboard">
                            <i class="bi bi-arrow-clockwise"></i>
                        </button>
                        <button class="control-btn active" id="rtz-btn" title="Toggle RTZ Routes">
                            <i class="fas fa-route"></i>
                        </button>
                        <button class="control-btn active" id="weather-btn" title="Toggle Weather">
                            <i class="bi bi-cloud-sun"></i>
                        </button>
                        <button class="control-btn active" id="ais-btn" title="Toggle Real Vessels">
                            <i class="bi bi-ship"></i>
                        </button>
                        <button class="control-btn" id="turbine-btn" title="Toggle Wind Turbines">
                            <i class="bi bi-fan"></i>
                        </button>
                        <button class="control-btn" id="tanker-btn" title="Toggle Tankers">
                            <i class="bi bi-droplet"></i>
                        </button>
                        <button class="control-btn" id="debug-btn" title="Show Debug Info">
                            <i class="fas fa-bug"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Debug Panel (hidden by default) -->
    <div class="row mb-4" id="debug-panel" style="display: none;">
        <div class="col-12">
            <div class="debug-panel">
                <h6><i class="fas fa-bug me-2"></i>Data Debug Information</h6>
                <div class="row">
                    <div class="col-md-6">
                        <div class="debug-item">
                            <strong>Route Statistics:</strong><br>
                            â€¢ Total entries from database: {{ total_db_routes }}<br>
                            â€¢ Unique routes (deduplicated): {{ actual_unique_count }}<br>
                            â€¢ Duplicate entries: {{ total_db_routes - actual_unique_count }}<br>
                            â€¢ Ports in system: {{ ports_list|length if ports_list else 0 }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="debug-item">
                            <strong>Data Sources:</strong><br>
                            â€¢ Data timestamp: <span id="debug-timestamp">--:--</span><br>
                            â€¢ Routes table rows: <span id="debug-table-rows">0</span><br>
                            â€¢ Map routes loaded: <span id="debug-map-routes">0</span><br>
                            â€¢ AIS vessels: <span id="debug-ais-count">0</span>
                        </div>
                    </div>
                </div>
                <div class="mt-2">
                    <button class="btn btn-sm btn-outline-secondary me-2" id="recount-routes-btn">
                        <i class="fas fa-calculator me-1"></i>Recount Routes
                    </button>
                    <button class="btn btn-sm btn-outline-danger" id="clear-duplicates-btn">
                        <i class="fas fa-trash-alt me-1"></i>Remove Duplicates
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Map Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Norwegian Waters</h5>
                    <div>
                        <span class="badge bg-light text-dark me-2">
                            <i class="bi bi-ship me-1"></i>
                            <span id="vessel-count">0</span>
                        </span>
                        <!-- Show UNIQUE route count -->
                        <span class="badge bg-success text-dark">
                            <i class="fas fa-database me-1"></i>
                            <span id="route-count">{{ actual_unique_count }}</span>
                        </span>
                        <span class="badge bg-warning text-dark ms-2">
                            <i class="bi bi-wind me-1"></i>
                            <span id="turbine-count">0</span>
                        </span>
                        {% if total_db_routes > actual_unique_count %}
                        <span class="badge bg-danger text-dark ms-2" title="Duplicate routes detected">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            {{ total_db_routes - actual_unique_count }} dup
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body p-0">
                    <div id="maritime-map" style="height: 500px;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <!-- Weather -->
        <div class="col-md-3 mb-3">
            <div class="stats-card temp-stat">
                <h6><i class="bi bi-cloud-sun me-2"></i>Weather</h6>
                <h3 id="weather-temp">--Â°C</h3>
                <small class="text-muted" id="weather-location">Bergen</small>
            </div>
        </div>
        
        <!-- Wind -->
        <div class="col-md-3 mb-3">
            <div class="stats-card wind-stat">
                <h6><i class="bi bi-wind me-2"></i>Wind</h6>
                <h3 id="wind-speed">-- m/s</h3>
                <small class="text-muted" id="wind-direction">--Â°</small>
            </div>
        </div>
        
        <!-- Vessels -->
        <div class="col-md-3 mb-3">
            <div class="stats-card vessels-stat">
                <h6><i class="bi bi-ship me-2"></i>Vessels</h6>
                <h3 id="active-vessels">--</h3>
                <small class="text-muted" id="vessel-type">Loading...</small>
            </div>
        </div>
        
        <!-- RTZ Routes - SHOW UNIQUE COUNT -->
        <div class="col-md-3 mb-3">
            <div class="stats-card rtz-stat {% if total_db_routes > actual_unique_count %}border-warning{% else %}border-info{% endif %}">
                <h6><i class="fas fa-database me-2"></i>Unique Routes</h6>
                <h3 id="route-display-count">{{ actual_unique_count }}</h3>
                <small class="text-muted">
                    {% if unique_ports_count is defined %}
                        {{ unique_ports_count }}/{{ ports_list|length if ports_list else 0 }} ports
                    {% else %}
                        {{ ports_list|length if ports_list else 0 }} ports
                    {% endif %}
                </small>
                <div class="{% if total_db_routes > actual_unique_count %}data-warning{% else %}data-note{% endif %} mt-2">
                    <small class="{% if total_db_routes > actual_unique_count %}text-warning{% else %}text-info{% endif %}">
                        <i class="fas fa-{% if total_db_routes > actual_unique_count %}exclamation-triangle{% else %}database{% endif %} me-1"></i>
                        {% if total_db_routes > actual_unique_count %}
                            {{ total_db_routes - actual_unique_count }} duplicates filtered
                        {% else %}
                            Clean database count
                        {% endif %}
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Routes Table -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-route me-2"></i>
                        NCA Maritime Routes 
                        <span class="badge bg-primary ms-2" id="actual-routes-badge">{{ actual_unique_count }}</span>
                        <span class="badge bg-info ms-1" title="Unique routes only">
                            <i class="fas fa-filter"></i> Unique
                        </span>
                        {% if total_db_routes > actual_unique_count %}
                        <span class="badge bg-warning ms-1" title="Duplicate routes filtered">
                            <i class="fas fa-filter"></i> -{{ total_db_routes - actual_unique_count }} dup
                        </span>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    {% if unique_routes and unique_routes|length > 0 %}
                        <!-- Data Quality Information -->
                        <div class="alert {% if total_db_routes > actual_unique_count %}alert-warning{% else %}alert-info{% endif %} mb-3">
                            <div class="d-flex">
                                <i class="fas fa-{% if total_db_routes > actual_unique_count %}exclamation-triangle{% else %}database{% endif %} me-2 mt-1"></i>
                                <div>
                                    <small>
                                        Showing <strong>{{ actual_unique_count }}</strong> unique RTZ routes from 
                                        <strong>
                                            {% if unique_ports_count is defined %}
                                                {{ unique_ports_count }}
                                            {% else %}
                                                {{ ports_list|length if ports_list else 0 }}
                                            {% endif %}
                                        </strong> Norwegian ports.
                                        {% if total_db_routes > actual_unique_count %}
                                        <span class="text-warning">
                                            <i class="fas fa-filter ms-2"></i>
                                            {{ total_db_routes - actual_unique_count }} duplicate entries filtered
                                        </span>
                                        {% else %}
                                        <span class="text-success">
                                            <i class="fas fa-check-circle ms-2"></i>
                                            No duplicates found
                                        </span>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="route-table-container">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Route Name</th>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>Distance</th>
                                        <th>Waypoints</th>
                                        <th>Port</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="routes-table-body">
                                    {% for route in unique_routes %}
                                    {% set route_name = route.route_name or route.name or ('Route ' ~ loop.index) %}
                                    <tr class="route-row" 
                                        data-city="{{ route.source_city|default('')|lower }}" 
                                        data-port="{{ route.source_city|default('')|lower }}"
                                        data-route-name="{{ route_name|lower }}">
                                        <!-- Row Number -->
                                        <td class="text-muted">{{ loop.index }}</td>
                                        
                                        <!-- Route Name -->
                                        <td>
                                            {% if route.clean_name %}
                                                <strong>{{ route.clean_name }}</strong>
                                            {% elif route_name %}
                                                {% set clean_name = route_name|replace('NCA_', '')|replace('_2025', '')|replace('_', ' ')|title %}
                                                <strong>{{ clean_name }}</strong>
                                            {% else %}
                                                <strong>Route {{ loop.index }}</strong>
                                            {% endif %}
                                            
                                            <!-- Show source file if available -->
                                            {% if route.original_file or route.rtz_filename %}
                                                <br><small class="text-muted">
                                                    <i class="fas fa-file me-1"></i>
                                                    {{ route.original_file or route.rtz_filename }}
                                                </small>
                                            {% endif %}
                                        </td>
                                        
                                        <!-- Origin -->
                                        <td>
                                            {% if route.origin and route.origin != 'Unknown' %}
                                                <span class="badge bg-success bg-opacity-25">{{ route.origin }}</span>
                                            {% else %}
                                                <span class="text-muted">Coastal</span>
                                            {% endif %}
                                        </td>
                                        
                                        <!-- Destination -->
                                        <td>
                                            {% if route.destination and route.destination != 'Unknown' %}
                                                <span class="badge bg-danger bg-opacity-25">{{ route.destination }}</span>
                                            {% else %}
                                                <span class="text-muted">Coastal</span>
                                            {% endif %}
                                        </td>
                                        
                                        <!-- Distance -->
                                        <td>
                                            {% if route.total_distance_nm %}
                                                <strong>{{ "%.1f"|format(route.total_distance_nm) }} NM</strong>
                                            {% else %}
                                                <span class="text-muted">0.0 NM</span>
                                            {% endif %}
                                        </td>
                                        
                                        <!-- Waypoints -->
                                        <td>
                                            {% if route.waypoint_count %}
                                                <span class="badge bg-info bg-opacity-25">{{ route.waypoint_count }}</span>
                                            {% else %}
                                                <span class="text-muted">0</span>
                                            {% endif %}
                                        </td>
                                        
                                        <!-- Source City -->
                                        <td>
                                            {% if route.source_city %}
                                                <span class="badge bg-primary bg-opacity-25">{{ route.source_city|title }}</span>
                                            {% else %}
                                                <span class="text-muted">Unknown</span>
                                            {% endif %}
                                        </td>
                                        
                                        <!-- Status -->
                                        <td>
                                            <span class="badge bg-success status-badge">
                                                <i class="bi bi-check-circle me-1"></i>
                                                {% if route.empirically_verified %}
                                                    Verified
                                                {% else %}
                                                    Active
                                                {% endif %}
                                            </span>
                                            <!-- Show if this is a duplicate (should not appear now) -->
                                            {% if route._is_duplicate %}
                                            <br><small class="text-danger">
                                                <i class="fas fa-copy me-1"></i>Duplicate
                                            </small>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Route Statistics Footer -->
                        <div class="mt-3 pt-3 border-top">
                            <div class="row">
                                <div class="col-md-3">
                                    <small class="text-muted">
                                        <i class="bi bi-list-check me-1"></i>
                                        Unique routes: <strong>{{ actual_unique_count }}</strong>
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">
                                        <i class="bi bi-copy me-1"></i>
                                        Duplicates filtered: <strong>{{ total_db_routes - actual_unique_count }}</strong>
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt me-1"></i>
                                        Unique ports: <strong>
                                            {% if unique_ports_count is defined %}
                                                {{ unique_ports_count }}
                                            {% else %}
                                                Calculating...
                                            {% endif %}
                                        </strong>
                                    </small>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        Updated: <span id="route-update-time">Now</span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <!-- No routes message -->
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-route text-muted fs-1"></i>
                            </div>
                            <h5 class="text-muted">No RTZ Routes Found</h5>
                            <p class="text-muted mb-3">
                                No RTZ route data is currently available in the database.
                            </p>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="{{ url_for('routes_bp.view_routes', lang=lang) }}" 
                                   class="btn btn-outline-primary mt-3">
                                    <i class="bi bi-search me-1"></i>Check Routes Page
                                </a>
                                <button class="btn btn-outline-info mt-3" id="check-database-btn">
                                    <i class="fas fa-database me-1"></i>Check Database
                                </button>
                                <a href="{{ url_for('routes_bp.scan_rtz_files') }}" 
                                   class="btn btn-outline-success mt-3">
                                    <i class="fas fa-file-import me-1"></i>Import Routes
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <!-- Data Verification Footer -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="alert alert-secondary">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-database me-1"></i>
                        <strong>Data Integrity:</strong>
                        <span class="ms-2" id="data-integrity-status">
                            {{ actual_unique_count }} unique routes ({{ total_db_routes }} total entries)
                        </span>
                    </div>
                    <div>
                        <small class="text-muted me-3">
                            <i class="bi bi-clock me-1"></i>
                            <span id="data-update-time">--:--</span>
                        </small>
                        <a href="{{ url_for('routes_bp.view_routes', lang=lang) }}" 
                           class="btn btn-sm btn-outline-secondary me-2">
                            <i class="fas fa-external-link-alt me-1"></i>Full Routes View
                        </a>
                        <button class="btn btn-sm btn-outline-info" id="verify-data-btn">
                            <i class="fas fa-sync me-1"></i>Verify Now
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

