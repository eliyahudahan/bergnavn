{% block scripts %}
<script src="https://unpkg.com/leaflet.markercluster@1.5.3/dist/leaflet.markercluster.js"></script>
<script src="{{ url_for('static', filename='js/split/maritime_map.js') }}"></script>
<script src="{{ url_for('static', filename='js/split/maritime_weather.js') }}"></script>
<script src="{{ url_for('static', filename='js/split/ais_realtime.js') }}"></script>
<script src="{{ url_for('static', filename='js/split/wind_turbines_realtime.js') }}"></script>
<script src="{{ url_for('static', filename='js/split/tanker_monitoring.js') }}"></script>
<script src="{{ url_for('static', filename='js/split/rtz_routes_fixed.js') }}"></script>

<script>
// Data-Driven Maritime Dashboard with Duplicate Detection
document.addEventListener('DOMContentLoaded', function() {
    console.log('ðŸš¢ Maritime Dashboard (Fixed Duplicates) initialized');
    
    // Get accurate counts from the page
    const routeCountBadge = document.getElementById('route-count-badge');
    const actualUniqueCount = routeCountBadge ? parseInt(routeCountBadge.textContent) || 0 : 0;
    
    const totalDbRoutes = {{ total_db_routes }};
    const duplicateCount = Math.max(0, totalDbRoutes - actualUniqueCount);
    
    console.log('ðŸ“Š Route Statistics:');
    console.log(`   â€¢ Unique routes: ${actualUniqueCount}`);
    console.log(`   â€¢ Total database entries: ${totalDbRoutes}`);
    console.log(`   â€¢ Duplicates filtered: ${duplicateCount}`);
    
    // Count route rows in table
    const routeRows = document.querySelectorAll('.route-row');
    console.log('ðŸ“‹ Found', routeRows.length, 'unique route rows in table');
    
    // Initialize dashboard
    initializeDashboard();
    
    function initializeDashboard() {
        // Update time display
        updateTime();
        setInterval(updateTime, 60000);
        
        // Setup port filtering
        setupPortFiltering();
        
        // Setup event listeners
        setupEventListeners();
        
        // Initialize components after a delay
        setTimeout(() => {
            initializeComponents();
            updateDebugInfo();
        }, 1000);
    }
    
    function updateTime() {
        try {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-GB', { 
                timeZone: 'Europe/Oslo',
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit'
            });
            const dateStr = now.toLocaleDateString('en-GB', {
                timeZone: 'Europe/Oslo',
                weekday: 'short',
                day: 'numeric',
                month: 'short'
            });
            
            // Update all time displays
            const timeElements = [
                'local-time', 'data-update-time', 'route-update-time', 'debug-timestamp'
            ];
            
            timeElements.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    if (id === 'debug-timestamp') {
                        element.textContent = `${dateStr} ${timeStr}`;
                    } else if (id === 'data-update-time') {
                        element.textContent = `Updated: ${dateStr} ${timeStr}`;
                    } else {
                        element.textContent = `${dateStr} ${timeStr}`;
                    }
                }
            });
            
        } catch (error) {
            console.warn('Time update error:', error);
        }
    }
    
    function updateDebugInfo() {
        // Update debug panel information
        const tableRows = document.querySelectorAll('.route-row').length;
        const tableRowsElement = document.getElementById('debug-table-rows');
        if (tableRowsElement) {
            tableRowsElement.textContent = tableRows;
        }
        
        // Update duplicate info
        const duplicateCountElement = document.querySelector('#data-integrity-status');
        if (duplicateCountElement) {
            duplicateCountElement.textContent = 
                `${actualUniqueCount} unique routes (${totalDbRoutes} total entries)`;
        }
    }
    
    function setupPortFiltering() {
        const cityBadges = document.querySelectorAll('.city-badge[data-port]');
        
        cityBadges.forEach(badge => {
            badge.addEventListener('click', function() {
                const port = this.dataset.port;
                if (!port) return;
                
                console.log('ðŸ“ Filtering by port:', port);
                
                // Remove active class from all badges
                document.querySelectorAll('.city-badge').forEach(b => {
                    b.classList.remove('active');
                });
                
                // Add active class to clicked badge
                this.classList.add('active');
                
                // Get all route rows
                const rows = document.querySelectorAll('.route-row');
                let visibleCount = 0;
                
                // Filter rows
                rows.forEach(row => {
                    const rowPort = row.dataset.port || '';
                    
                    if (port === 'reset' || rowPort === port) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });
                
                console.log('ðŸ‘ï¸ Showing', visibleCount, 'routes for port:', port);
                
                // Update debug info
                updateDebugInfo();
                
                // Show message if no routes found
                if (port !== 'reset' && visibleCount === 0) {
                    showAlert('info', `No routes found for this port. Showing all routes.`, 3000);
                    // Auto-reset after 3 seconds
                    setTimeout(() => {
                        const resetBtn = document.querySelector('#reset-filters');
                        if (resetBtn) {
                            resetBtn.click();
                        }
                    }, 3000);
                }
            });
        });
    }
    
    function setupEventListeners() {
        // Refresh button
        const refreshBtn = document.getElementById('refresh-btn');
        if (refreshBtn) {
            refreshBtn.addEventListener('click', function() {
                console.log('ðŸ”„ Manual refresh requested');
                const originalHtml = this.innerHTML;
                this.innerHTML = '<i class="bi bi-arrow-clockwise spin"></i>';
                
                setTimeout(() => {
                    window.location.reload();
                }, 500);
            });
        }
        
        // Verify data button
        const verifyBtn = document.getElementById('verify-data-btn');
        if (verifyBtn) {
            verifyBtn.addEventListener('click', function() {
                verifyDataIntegrity();
            });
        }
        
        // Debug button
        const debugBtn = document.getElementById('debug-btn');
        if (debugBtn) {
            debugBtn.addEventListener('click', function() {
                const debugPanel = document.getElementById('debug-panel');
                if (debugPanel) {
                    const isVisible = debugPanel.style.display !== 'none';
                    debugPanel.style.display = isVisible ? 'none' : 'block';
                    this.classList.toggle('active', !isVisible);
                    console.log('ðŸ› Debug panel', isVisible ? 'hidden' : 'shown');
                }
            });
        }
        
        // Recount routes button
        const recountBtn = document.getElementById('recount-routes-btn');
        if (recountBtn) {
            recountBtn.addEventListener('click', function() {
                recountRoutes();
            });
        }
        
        // Clear duplicates button
        const clearDupBtn = document.getElementById('clear-duplicates-btn');
        if (clearDupBtn) {
            clearDupBtn.addEventListener('click', function() {
                clearDuplicates();
            });
        }
        
        // Show data source button
        const dataSourceBtn = document.getElementById('show-data-source');
        if (dataSourceBtn) {
            dataSourceBtn.addEventListener('click', function() {
                const modalElement = document.getElementById('dataSourceModal');
                if (modalElement) {
                    const modal = new bootstrap.Modal(modalElement);
                    modal.show();
                }
            });
        }
        
        // Fix duplicates button
        const fixDupBtn = document.getElementById('fix-duplicates-btn');
        if (fixDupBtn) {
            fixDupBtn.addEventListener('click', function() {
                fixDuplicates();
            });
        }
        
        // Show duplicates button
        const showDupBtn = document.getElementById('show-duplicates-btn');
        if (showDupBtn) {
            showDupBtn.addEventListener('click', function() {
                showDuplicates();
            });
        }
        
        // Dashboard control buttons
        const controlButtons = ['rtz-btn', 'weather-btn', 'ais-btn', 'turbine-btn', 'tanker-btn'];
        controlButtons.forEach(btnId => {
            const btn = document.getElementById(btnId);
            if (btn) {
                btn.addEventListener('click', function() {
                    this.classList.toggle('active');
                    console.log('ðŸŽ›ï¸ Toggled:', btnId, 'active:', this.classList.contains('active'));
                });
            }
        });
    }
    
    function initializeComponents() {
        console.log('âš™ï¸ Initializing dashboard components...');
        
        // Initialize AIS if available
        if (typeof window.aisManager !== 'undefined' && typeof window.aisManager.initialize === 'function') {
            console.log('ðŸš¢ Initializing AIS manager...');
            window.aisManager.initialize();
            
            // Update AIS count in debug panel
            setTimeout(() => {
                if (window.aisManager && window.aisManager.vesselCount !== undefined) {
                    const aisCountElement = document.getElementById('debug-ais-count');
                    if (aisCountElement) {
                        aisCountElement.textContent = window.aisManager.vesselCount;
                    }
                }
            }, 3000);
        }
        
        // Initialize weather if available
        if (typeof window.weatherManager !== 'undefined' && typeof window.weatherManager.initialize === 'function') {
            console.log('ðŸŒ¤ï¸ Initializing weather manager...');
            window.weatherManager.initialize();
        }
        
        // Initialize RTZ routes if available
        if (typeof window.rtzManager !== 'undefined' && typeof window.rtzManager.initialize === 'function') {
            console.log('ðŸ—ºï¸ Initializing RTZ route manager...');
            window.rtzManager.initialize();
            
            // Update map route count in debug panel
            setTimeout(() => {
                const mapRoutesElement = document.getElementById('debug-map-routes');
                if (mapRoutesElement && window.rtzManager && window.rtzManager.routeCount !== undefined) {
                    mapRoutesElement.textContent = window.rtzManager.routeCount;
                }
            }, 2000);
        }
        
        console.log('âœ… Dashboard components initialized');
    }
    
    function showAlert(type, message, duration = 5000) {
        // Remove any existing alerts first
        const existingAlerts = document.querySelectorAll('.alert-dismissible.temporary-alert');
        existingAlerts.forEach(alert => alert.remove());
        
        // Create new alert
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show mt-3 temporary-alert`;
        alertDiv.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                <div>${message}</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        // Add to page
        const container = document.querySelector('.container-fluid');
        if (container) {
            container.prepend(alertDiv);
        }
        
        // Auto-dismiss after duration
        if (duration > 0) {
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, duration);
        }
        
        return alertDiv;
    }
    
    function verifyDataIntegrity() {
        console.log('ðŸ” Verifying data integrity...');
        
        const verifyBtn = document.getElementById('verify-data-btn');
        const originalHtml = verifyBtn ? verifyBtn.innerHTML : '';
        
        if (verifyBtn) {
            verifyBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Verifying...';
        }
        
        // Check table rows vs unique count
        const tableRows = document.querySelectorAll('.route-row').length;
        
        setTimeout(() => {
            if (tableRows === actualUniqueCount) {
                showAlert('success', 
                    `Data integrity verified: ${tableRows} table rows match ${actualUniqueCount} unique routes`);
                console.log('âœ… Data integrity check passed');
            } else {
                showAlert('warning', 
                    `Data mismatch: Table shows ${tableRows} rows, but should have ${actualUniqueCount} unique routes`);
                console.warn('âš ï¸ Data mismatch detected');
            }
            
            if (verifyBtn) {
                verifyBtn.innerHTML = originalHtml;
            }
            
            updateDebugInfo();
        }, 1500);
    }
    
    function recountRoutes() {
        console.log('ðŸ§® Recounting routes...');
        
        const recountBtn = document.getElementById('recount-routes-btn');
        const originalHtml = recountBtn ? recountBtn.innerHTML : '';
        
        if (recountBtn) {
            recountBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Counting...';
        }
        
        // Count routes in table
        const tableRows = document.querySelectorAll('.route-row').length;
        
        // Count unique route names in table
        const routeNames = new Set();
        document.querySelectorAll('.route-row').forEach(row => {
            const routeName = row.dataset.routeName || '';
            if (routeName) {
                routeNames.add(routeName);
            }
        });
        
        setTimeout(() => {
            showAlert('info', 
                `Recounted: ${tableRows} table rows, ${routeNames.size} unique route names`);
            console.log('ðŸ“Š Recount results:', {
                tableRows,
                uniqueRouteNames: routeNames.size,
                routeNames: Array.from(routeNames)
            });
            
            if (recountBtn) {
                recountBtn.innerHTML = originalHtml;
            }
            
            updateDebugInfo();
        }, 1000);
    }
    
    function clearDuplicates() {
        console.log('ðŸ§¹ Clearing duplicates from database...');
        
        if (!confirm('Are you sure you want to remove duplicate routes from the database? This action cannot be undone.')) {
            return;
        }
        
        showAlert('warning', 'Removing duplicate routes from database...', 0);
        
        // Make API call to clear duplicates
        fetch('/api/routes/clean-duplicates', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showAlert('success', 
                    `Removed ${data.removed_count} duplicate routes. Reloading dashboard...`);
                console.log('âœ… Duplicates removed:', data);
                
                // Reload page after 2 seconds
                setTimeout(() => {
                    window.location.reload();
                }, 2000);
            } else {
                showAlert('danger', 
                    `Failed to remove duplicates: ${data.message || 'Unknown error'}`);
                console.error('âŒ Failed to remove duplicates:', data);
            }
        })
        .catch(error => {
            console.error('âŒ Error removing duplicates:', error);
            showAlert('danger', 'Failed to remove duplicates. Please try again.');
        });
    }
    
    function fixDuplicates() {
        console.log('ðŸ”§ Fixing duplicate display...');
        showAlert('info', 'Filtering duplicate routes from display...', 3000);
        
        // Already handled by server-side filtering, just show message
        setTimeout(() => {
            showAlert('success', 'Duplicate routes filtered from display');
        }, 1000);
    }
    
    function showDuplicates() {
        console.log('ðŸ‘ï¸ Showing duplicate routes...');
        
        // Highlight potential duplicates in table
        const routeNames = {};
        const rows = document.querySelectorAll('.route-row');
        
        rows.forEach(row => {
            const routeName = row.dataset.routeName || '';
            if (routeName) {
                if (!routeNames[routeName]) {
                    routeNames[routeName] = [];
                }
                routeNames[routeName].push(row);
            }
        });
        
        // Find duplicates
        let duplicateCount = 0;
        Object.keys(routeNames).forEach(name => {
            if (routeNames[name].length > 1) {
                duplicateCount++;
                // Highlight all but first occurrence
                routeNames[name].forEach((row, index) => {
                    if (index > 0) {
                        row.style.backgroundColor = '#fff3cd';
                        const statusCell = row.querySelector('td:last-child');
                        if (statusCell) {
                            const duplicateBadge = document.createElement('small');
                            duplicateBadge.className = 'text-danger d-block';
                            duplicateBadge.innerHTML = '<i class="fas fa-copy me-1"></i>Duplicate';
                            statusCell.appendChild(duplicateBadge);
                        }
                    }
                });
            }
        });
        
        if (duplicateCount > 0) {
            showAlert('warning', 
                `Highlighted ${duplicateCount} routes with duplicate names in table`, 5000);
        } else {
            showAlert('success', 'No duplicate route names found in table display');
        }
    }
    
    // Initialize dashboard after page load
    console.log('ðŸŽ¯ Dashboard initialization complete');
    
    // Global function for modal
    window.cleanDuplicates = clearDuplicates;
});

// Helper function to check for duplicate route names
function detectDuplicateRoutes() {
    const routeNames = new Set();
    const duplicates = [];
    
    document.querySelectorAll('.route-row').forEach(row => {
        const routeName = row.dataset.routeName || '';
        if (routeName) {
            if (routeNames.has(routeName)) {
                duplicates.push({
                    name: routeName,
                    element: row
                });
            } else {
                routeNames.add(routeName);
            }
        }
    });
    
    return {
        uniqueCount: routeNames.size,
        duplicateCount: duplicates.length,
        duplicates: duplicates
    };
}
</script>
