# === Database Configuration ===
# Format: dialect+driver://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost/dbname

# === Flask App Secret Key ===
# Used for session management, cookies, CSRF protection, etc.
SECRET_KEY=your-secret-key-here

# === Flask Debug Mode ===
# True = Development mode with hot reloading and detailed errors
# False = Production mode (more secure and silent)
DEBUG=True

# === Mail Server Configuration ===
# SMTP server for sending emails (e.g., Gmail, Outlook, etc.)
MAIL_SERVER=smtp.gmail.com

# SMTP port:
# - 587 for TLS (STARTTLS)
# - 465 for SSL (deprecated in some cases)
MAIL_PORT=587

# Enable TLS encryption (recommended for Gmail)
MAIL_USE_TLS=True

# Enable SSL encryption (usually not needed if TLS is True)
MAIL_USE_SSL=False

# Email account credentials used to send emails from the app
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
